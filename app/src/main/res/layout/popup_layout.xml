<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="900px"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:weightSum="1">



        <TextView
            android:id="@+id/tv"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Choisir Date, Equipement et la variable pour tracer la courbe"
            android:gravity="center_horizontal"
            android:textSize="18dip"

            android:textColor="@color/lighterblue"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_margin="8dp"
        android:weightSum="1">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Variable :"
        android:gravity="center"
        android:textSize="18dip"
        android:textColor="@color/lighterblue"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" />


        <Spinner
            android:id="@+id/planets_spinner1"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv1"
            android:layout_toEndOf="@+id/tv1"
            android:spinnerMode="dropdown"
            android:touchscreenBlocksFocus="false" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_margin="8dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/tv3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Equipement :"
            android:gravity="center"
            android:textSize="18dip"
            android:textColor="@color/lighterblue"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />
        <Spinner
            android:id="@+id/planets_spinner2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv3"
            android:layout_toEndOf="@+id/tv3" />

    </RelativeLayout>

        <view
            android:id="@+id/datePicker"
            android:layout_width="1000px"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            class="com.android4dev.navigationview.CustomDatePicker"
            android:theme="@style/dialog">
        </view>



        <LinearLayout
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_gravity="right"
    android:layout_marginBottom="0dp"
    android:layout_margin="0dp"
    android:weightSum="1"
            android:clickable="true"
            android:layout_alignParentBottom="true"
            android:focusable="true">



        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Confirmer"
            android:id="@+id/button1"




            android:textColor="#80ba1a"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.50"
            android:layout_marginLeft="0dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Annuler"
            android:id="@+id/button2"

            android:textColor="#ea6f51"

            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_weight="0.50" />

</LinearLayout>

    </LinearLayout>
</ScrollView>
