<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purewhite">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/samsung" />

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="0dp"
            android:text="Smart Control"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item"
            android:maxLines="3"
            android:padding="0dp"
            android:text="Choisisser les actions automatiques que vous voulez effectuer sur vos Ã©quipements et appuyer
sur Confimer "

            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="0dp"
            android:id="@+id/title1"
            android:layout_marginBottom="7dp" />





    </RelativeLayout>

</android.support.v7.widget.CardView>