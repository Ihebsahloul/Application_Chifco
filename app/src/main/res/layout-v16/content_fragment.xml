<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/toolbar_dropshadow"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        android:layout_marginBottom="0dp">






        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purewhite">


            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sss" />

            <TextView
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:maxLines="3"
                android:padding="0dp"
                android:text="Smart Dashboard "
                android:textColor="@color/blue"
                android:textStyle="normal|bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="0dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item"
                android:maxLines="3"
                android:padding="0dp"
                android:text="Choisisser les actions automatiques que vous voulez effectuer sur vos équipements et appuyer
sur Confimer "

                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingTop="0dp"
                android:id="@+id/title1"
                android:layout_marginBottom="7dp" />-->





        </RelativeLayout>

    </android.support.v7.widget.CardView>







    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="9dp"
            android:baselineAligned="false"
            android:weightSum="1">





            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="0dp"
                android:layout_marginTop="0dp">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/layerl_ist"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="              Energie          "
                            android:textSize="18sp"
                            android:background="#ea6f51"
                            android:id="@+id/textView2"
                            android:textStyle="normal"
                            android:textColor="#ffffff"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="155dp"
                            app:cpb_background_progressbar_color="#FFCDD2"
                            app:cpb_background_progressbar_width="2dp"
                            app:cpb_progressbar_color="#ea6f51"
                            android:id="@+id/cpb1"
                            app:cpb_progressbar_width="5dp"
                            android:layout_gravity="center"
                            android:layout_alignWithParentIfMissing="false"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="45dp" />

                        <TextView
                            android:id="@+id/progress_circle_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@android:color/transparent"
                            android:gravity="center"

                            android:textColor="#ea6f51"
                            android:textSize="34sp"
                            android:textStyle="bold"
                            android:paddingTop="60dp"
                            android:layout_below="@+id/textView2"
                            android:layout_centerHorizontal="true" />

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageView8"
                            android:src="@drawable/consume"
                            android:layout_below="@+id/progress_circle_text4"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp" />
                    </RelativeLayout>


                </LinearLayout>





                <LinearLayout
                    android:layout_width="54dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/layerl_ist"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text=" Consommation "
                            android:textSize="18sp"
                            android:textColor="#ffffff"
                            android:id="@+id/textView4"
                            android:background="#FF75A81C"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />


                        <TextView
                            android:id="@+id/progress_circle_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center"

                            android:textColor="@color/colorAccent"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_below="@+id/textView4"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp" />
                    </RelativeLayout>




                    <ImageView
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="40dp"
                        android:gravity="center_horizontal"
                        android:layout_height="43dp"
                        android:background="@drawable/leaf"
                        android:layout_alignWithParentIfMissing="false"
                        android:layout_below="@+id/progress_circle_text1"
                        android:layout_alignRight="@+id/progress_circle_text1"
                        android:layout_alignEnd="@+id/progress_circle_text1"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="10dp"
                        android:layout_margin="0dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="center"

                        android:textColor="@color/accent_material_light"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/textView5"
                        android:layout_alignLeft="@+id/textView5"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_marginTop="10dp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/elecgreen"
                        android:indeterminate="false"
                        android:layout_below="@+id/progress_circle_text3"
                        android:layout_alignRight="@+id/progress_circle_text3"
                        android:layout_alignEnd="@+id/progress_circle_text3"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="0dp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@drawable/layerl_ist">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:text="         Climatiseur"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:textColor="#eeeeee"
                            android:textSize="18sp"
                            android:id="@+id/textView5"
                            android:fontFamily="Myriad Pro"
                            android:background="#FF209FA8" />


                        <TextView
                            android:id="@+id/progress_circle_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="24°c"
                            android:textColor="#FF209FA8"
                            android:textSize="40sp"
                            android:layout_below="@+id/textView5"
                            android:layout_alignLeft="@+id/textView5"
                            android:layout_alignStart="@+id/textView5"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="10dp" />

                        <ImageView
                            style="?android:attr/progressBarStyleHorizontal"
                            android:id="@+id/imageView7"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/cooling"
                            android:indeterminate="false"
                            android:indeterminateDuration="1"
                            android:max="100"
                            android:progress="10"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:layout_below="@+id/progress_circle_text3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="12dp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="165dp"
                    android:layout_weight="1"
                    android:background="@drawable/layerl_ist"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="200dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="0dp"
                            android:textColor="#ffffff"
                            android:text="      Temperature     "
                            android:textSize="18sp"

                            android:id="@+id/textView3"
                            android:background="@color/lighterblue"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />

                        <ImageView
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/weather"
                            android:indeterminate="false"
                            android:indeterminateDuration="1"
                            android:max="100"
                            android:progress="10"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:layout_below="@+id/progress_circle_text"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/progress_circle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="center"

                            android:textColor="@color/lighterblue"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/textView3"
                            android:layout_marginTop="10dp" />
                    </RelativeLayout>
                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"

                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/layerl_ist"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/progressBar11"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="62dp"
                            android:layout_height="62dp"
                            android:background="@drawable/alerts"
                            android:indeterminate="false"
                            android:indeterminateDuration="1"
                            android:max="100"
                            android:progress="10"
                            android:progressDrawable="@drawable/circular_progress_bar"

                            android:layout_alignTop="@+id/progress_circle_text11"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />

                        <TextView
                            android:id="@+id/progress_circle_text11"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"

                            android:textColor="#ffca2a"
                            android:textSize="50sp"


                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Notifications disponibles "
                            android:id="@+id/textView6"
                            android:textSize="18sp"
                            android:textColor="@color/orange"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/progress_circle_text11"
                            android:layout_toEndOf="@+id/progress_circle_text11"
                            android:layout_marginLeft="7dp" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    </ScrollView>

